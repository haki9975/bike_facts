<h1> BikeFacts Login </h1>

<%= flash[:message] %>

<%= form_with(scope: :user, url: login_path, method: "post") do |f| %> 
<%= f.label :username %>
<%= f. text_field :username %> <br>
<%= f.label :password %>
<%= f.password_field :password %> <br>
<%= f.submit "Login" %>
<% end %>
<%= button_to 'Login With Google', "/auth/google_oauth2", class: 'nav-link active' , method: "post" %>