<%= render partial: 'errors/errors', locals: {model: @records } %>
<%= form_with(model: [@userbike, @records]) do |f| %>
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
<%= f.hidden_field :userbike_id, value: params[:userbike_id] %><br>
<%= f.label :name %><br>
<%= f.text_field :name %><br>
<%= f.label :date %><br>
<%= f.date_select :date %><br>
<%= f.label :cost  %><br>
<%= f.number_field :cost, step: :any %> <br>
<%= f.label :notes %><br>
<%= f.text_area :notes %><br>
<%= f.submit :submit %>
<% end %>